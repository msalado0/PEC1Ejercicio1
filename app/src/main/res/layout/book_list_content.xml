<?xml version="1.0" encoding="utf-8"?>
<!-- Este Layout es auxiliar, y mostrara una visual de los detalles de un libro, en este caso
solo se mostrara el id del libro con su nombre correspondiente, por lo que se definiran dos
TextView
 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp"
            android:layout_marginTop="@dimen/card_margin_top"
            android:layout_marginBottom="@dimen/card_margin_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

         <!--
        En el ejercicio 3 se engloba los dos TextView creados en el apartado anterior.
        -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        <!--
        Se aÃ±ade dos Textview para visualizar el titulo y el autor del libro.
        -->
                <TextView
                    android:id="@+id/titulo_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Titulo Libro"
                    android:textSize="@dimen/text_size_title"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:layout_marginTop="@dimen/text_margin_top"
                    android:textColor="#000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/autor_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#757373"
                    android:layout_marginRight="@dimen/text_margin_right"
                    android:layout_marginBottom="@dimen/text_margin_bottom"
                    android:text="Autor"
                    android:textSize="@dimen/text_size_autor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>


