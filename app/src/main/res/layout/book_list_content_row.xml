<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp"
            android:layout_marginTop="@dimen/card_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/image_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:foreground="@drawable/degradados"/>

                <TextView
                    android:id="@+id/titulo_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo Libro"
                    android:textSize="@dimen/text_size_title"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:layout_marginTop="@dimen/text_margin_top"
                    android:textColor="#00F"
                    app:layout_constraintStart_toStartOf="@id/image_book"
                    app:layout_constraintTop_toTopOf="@id/image_book"/>

                <TextView
                    android:id="@+id/autor_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0080"
                    android:layout_marginRight="@dimen/text_margin_right"
                    android:layout_marginBottom="@dimen/text_margin_bottom"
                    android:text="Autor"
                    android:textSize="@dimen/text_size_autor"
                    app:layout_constraintEnd_toEndOf="@id/image_book"
                    app:layout_constraintBottom_toBottomOf="@id/image_book"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>
